<section class="container">
	<div class="content_box1">
		<%- include ("../partial/back-btn"); %>
		<div class="welcome-msg">
			<div class="text_field" style="margin: 0 auto;">
				<h4>Welcome to Craigslist</h4>
				<p>Join more than 60 Million users around the globe</p>
			</div>
		</div>
		<img class="logo1" alt="horizontal_logo" src="/image/horizontal.png" />
		<%if (locals.msg) { %>
		<div class="alert alert-danger" role="alert" style="width: 80%;">
			<%=msg %>
		</div>
		<% } %>
		<form id="user_login" action="/auth/login" method="POST">
			<div class="form-group">
				<label for="email">Email address</label>
				<input
					type="email"
					class="form-control"
					name="email"
					id="email"
					placeholder="exampleemail@gmail.com"
					required
				/>
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<input
					id="password"
					type="password"
					name="password"
					class="form-control"
					placeholder="Password"
					required
				/>
			</div>
		</form>
		<button form="user_login" class="login">Login</button>
		<a class="skip" href="/forgot_password">Forgot Password ?</a>
		<p>OR</p>
		<%-include ("../partial/sm-btn");-%>
		<a class="skip" href="/type/sign_up">Create account</a>
	</div>
</section>
