<section class="container content_box1">
	<%- include ("../partial/back-btn"); %>
	<div class="welcome-msg">
		<div class="text_field" style="margin: 0 auto;">
			<h4>Welcome to Craigslist</h4>
			<p>Join more than 60 Million users around the globe</p>
		</div>
	</div>
	<img class="logo1" alt="horizontal_logo" src="/image/horizontal.png" />
	<%if (locals.msg) { %>
	<div
		class="alert alert-danger"
		role="alert"
		style="width: 80%; margin: auto;"
	>
		<%=msg %>
	</div>
	<% } %>
	<form
		id="user_login"
		action="/auth/login"
		method="POST"
		style="margin: 0 auto;"
	>
		<div class="form-group">
			<label for="email">Email address</label>
			<input
				type="email"
				class="form-control"
				name="email"
				id="email"
				placeholder="exampleemail@gmail.com"
				required
			/>
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input
				id="password"
				type="password"
				name="password"
				class="form-control"
				placeholder="Password"
				required
			/>
		</div>
	</form>
	<button form="user_login" class="login" style="margin: 0 auto;">Login</button>
	<a class="skip" href="/forgot_password" style="margin: 0 auto;"
		>Forgot Password ?</a
	>
	<p style="margin: 0 auto;">OR</p>
	<%-include ("../partial/sm-btn");-%>
	<a class="skip" href="/type/sign_up" style="margin: 0 auto;"
		>Create account</a
	>
	<a class="skip" style="margin: 0 auto;" href="/content/home">Skip for now</a>
</section>
