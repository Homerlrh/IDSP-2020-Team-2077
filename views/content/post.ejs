<section class="container p">
	<div class="post_container">
		<h3 class="post_style" id="post-header" style="text-align: center;">
			<%=title%>
		</h3>
		<div class="form-group inp">
			<label for="sort">Sort by</label>
			<select id="sort_by" class="form-control sort" type="text">
				<option value="All">All</option>
				<option value="New">Brand new</option>
				<option value="Good">Good</option>
				<option value="Ok">Ok</option>
				<option value="n/a">Can not describe</option>
			</select>
		</div>
		<div class="post_grid">
			<% if(locals.content_css) {%> <%if (post.length < 1) {%>
			<h1>No listing yet</h1>
			<%}else{%> <%post.forEach(x=> {%>

			<a href="/content/post_detail/<%=x.post_id%>" class="single-anchor">
				<div class="single_post">
					<%if (x.post_id == null) {%> <%}else{%> <% if(locals.content_css ==
					'f') {%>
					<img
						src="<%=x.image[0] %>"
						alt="Card image cap"
						class="post-img"
					/><%}else{%>
					<img
						src="<%=JSON.parse(x.image)[0] %>"
						alt="Card image cap"
						class="post-img"
					/>
					<%}%>
					<div class="post-body">
						<h6><%= x.post_title %></h6>
						<p class="price">CAD: $<%= x.price %></p>
						<p class="condition"><%= x.item_condition%></p>
						<p class="date"><%=x.date.toString().split('2020')[0]%></p>
						<p class="location"><%= x.location %></p>
					</div>
				</div>
			</a>
			<%}%><% }) ; %><%}%><%}%>
		</div>
	</div>
</section>
