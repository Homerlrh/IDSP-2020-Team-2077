<div class="d-sidebar">
	<br />
	<%- include ("clock"); %>
	<br />
	<form
		method="POST"
		action="/content/search"
		class="form-inline"
		style="
			margin: 0 auto;
			display: flex;
			flex-direction: column;
			align-items: flex-end;
		"
	>
		<div class="form-group">
			<i class="fas fa-search" aria-hidden="true"> </i>
			<input
				name="query"
				class="form-control"
				type="search"
				placeholder="Search"
			/>
		</div>
		<div class="form-group">
			<label>Optional</label>
			<select class="form-control" id="Category" name="category_id" type="text">
				<option value="0">Choose a Category</option>
				<option class="Housing" value="1">Housing</option>
				<option class="Vehicles" value="2">Vehicles</option>
				<option class="Electronics" value="3">Electronics</option>
				<option class="For Sale" value="4">For Sale</option>
				<option class="Jobs" value="5">Jobs</option>
				<option class="Community" value="6">Community</option>
			</select>
		</div>
		<div class="form-group">
			<label>Optional</label>
			<select
				class="form-control"
				id="Sub-Category"
				name="sub_category_id"
				type="text"
			>
				<option>Choose a Sub Category</option>
			</select>
		</div>

		<button class="btn btn-outline-success" type="submit">
			Search
		</button>
	</form>
</div>
