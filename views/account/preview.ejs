<section id="preview_section">
	<img id="preview_img" alt="preview_pic" name="preview_pic" src="#" />
	<div id="info">
		<label class="d-flex"
			>Title: &nbsp; <span style="font-weight: bold;" id="preview_Title"></span
		></label>
		<label class="d-flex"
			>Cost: $ &nbsp;
			<span style="font-weight: bold;" id="preview_Price"></span>
		</label>
		<label class="d-flex"
			>Post at: &nbsp;
			<span style="font-weight: bold;" id="category"></span>
		</label>
		<label class="d-flex"
			>Locate at: &nbsp;
			<span style="font-weight: bold;" id="location"></span>
		</label>
		<label
			>Item description:
			<article id="preview_Description"></article>
		</label>
	</div>
	<div class="user_info">
		<div class="preview_user">
			<img src="<%=avatar%>" alt="Card image cap" class="avatar" />
			<div class="post-body" style="margin: auto;">
				<h6><%=email%> (You)</h6>
				<p><%=phone%></p>
			</div>
		</div>
		<div class="d-flex justify-content-around" style="margin-bottom: 2rem;">
			<%if (locals.preview == true) {%>
			<button id="edit-btn">Edit</button>
			<%}%>
			<button id="publish-btn" form="create_post">Publish</button>
		</div>
	</div>
</section>
