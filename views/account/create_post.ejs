<div class="container post">
	<div>
		<form method="POST" enctype="multipart/form-data" id="create_post">
			<input type="text" name="seller_id" hidden />
			<div class="form-group inp">
				<label for="Title">Title</label>
				<input
					class="form-control"
					id="Title"
					name="title"
					type="text"
					placeholder="I am selling this house"
				/>
			</div>
			<div class="form-group inp">
				<label for="Price">Price</label>
				<input
					class="form-control"
					id="Price"
					name="price"
					type="text"
					placeholder="$200,000.0"
				/>
			</div>
			<div class="form-group inp">
				<label for="Category">Category</label>
				<select
					class="form-control"
					id="Category"
					name="category_id"
					type="text"
				>
					<option value="1">Housing</option>
					<option value="2">Vehicles</option>
					<option value="3">Electronics</option>
					<option value="4">For Sale</option>
					<option value="5">Jobs</option>
					<option value="6">Community</option>
				</select>
			</div>
			<div class="form-group inp">
				<label for="Sub-Category">Sub-Category</label>
				<select
					class="form-control"
					id="Sub-Category"
					name="sub_category_id"
					type="text"
				>
					<option value="1">Buy</option>
					<option value="2">Rent</option>
					<option value="3">Office</option>
					<option value="4">Storage</option>
					<option value="5">Vacation</option>
					<option value="6">Rooms</option>
				</select>
			</div>

			<div class="form-group inp">
				<label for="description">Description</label>
				<textarea
					name="description"
					class="form-control"
					id="description"
					rows="3"
					placeholder="In perfect Title, never used ..."
				></textarea>
			</div>
			<input type="file" name="pic" accept="image/*" hidden />
		</form>
		<button id="photo_upload" class="upload">
			Upload Images
		</button>
	</div>

	<button class="preview" form="create_post">preview</button>
</div>
