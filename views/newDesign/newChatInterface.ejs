<div class="container message">
	<% if (locals.err != "") { %>
	<br />
	<div class="alert alert-danger alert-dismissible fade show" role="alert">
		<%= err %>
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
	<% } %>
	<section class="CI">
		<div class="selectChat">
			<% chatrooms.forEach(chatroom => { %>

			<a link="/chat/detail_msg/ci/<%= chatroom.id %>" class="single-anchor">
				<div class="user_single_post">
					<img
						src="<%= JSON.parse(chatroom.other_user)[0].avatar %>"
						alt="Card image cap"
						class="avatar"
					/>
					<div class="post-body" style="margin: auto">
						<h6><%= JSON.parse(chatroom.other_user)[0].user %></h6>
						<p style="font-size: 1rem">
							<%= JSON.parse(chatroom.chat)[ JSON.parse(chatroom.chat).length -
							1 ].line_chat %>
						</p>
					</div>
				</div>
			</a>
			<% }) %>
		</div>
		<div id="detail_chat"></div>
	</section>
</div>
